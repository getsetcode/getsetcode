@using getsetcode.Model.Enum
@using getsetcode.Web.Extensions.HelperExtensions
@using getsetcode.Presentation.MvcHelpers
@model NavSection
            <h2 class="hide">getsetcode</h2>
            
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <ul class="nav">
                            @Html.MainNavListItem(NavSection.Home, Model)
                            @Html.MainNavListItem(NavSection.Contact, Model)
                            @Html.MainNavListItem(NavSection.CV, Model)
                            @Html.MainNavListItem(NavSection.Skills, Model)
                            @Html.MainNavListItem(NavSection.Portfolio, Model)
                            @Html.MainNavListItem(NavSection.Testimonials, Model)
                            @if (Model == NavSection.Blog)
                            {
                            @Html.MainNavListItem(NavSection.Blog, Model)
                            }
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Elsewhere<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a target="_blank" href="http://twitter.com/getsetcode">getsetcode on Twitter <i class="icon-external-link"></i></a></li>
                                    <li><a target="_blank" href="http://uk.linkedin.com/in/getsetcode">getsetcode on LinkedIn <i class="icon-external-link"></i></a></li>
                                    <li><a target="_blank" href="http://careers.stackoverflow.com/getsetcode">getsetcode on Stack Exchange <i class="icon-external-link"></i></a></li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav nav-pills pull-right">
                            <li><img src="@Url.ContentImageHeaderLogo()" alt="getsetcode.com" class="navbar-logo" /></li>
                        </ul>
                    </div>
                </div>
            </div>